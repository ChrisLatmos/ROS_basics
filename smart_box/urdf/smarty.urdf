<?xml version="1.0"?>
<robot name="smarty">

  <link name="base_footprint">
    <origin rpy="0 0 0" xyz="0 0 0"/>
  </link>
  <link name="COM">
    <visual>
      <geometry>
        <box size="3 0.2 0.2"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </visual>
  </link>
  <joint name="joint1" type="fixed">
    <parent link="base_footprint"/>
    <child link="COM"/>
    <origin xyz="0 0 0.25"/>
  </joint>
  <link name="rear_wheel">
    <visual>
    <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <cylinder radius="0.5" length="0.3"/>
      </geometry>
    </visual>
  </link>
  <joint name="rear_wheel_joint" type="continuous">
    <parent link="COM"/>
    <child link="rear_wheel"/>
    <origin xyz="-1.2 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>
  <link name="front_wheel">
    <visual>
    <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <cylinder radius="0.5" length="0.3"/>
      </geometry>
    </visual>
  </link>
  <joint name="front_wheel_joint" type="revolute">
    <parent link="COM"/>
    <child link="front_wheel"/>
    <origin xyz="1.2 0 0" rpy="0 0 0"/>
    <limit lower="-0.8" upper="0.8" effort="10" velocity="3"/>
    <axis xyz="0 0 1"/>
  </joint>

</robot>
