  <link name="base_footprint">
    <origin rpy="0 0 0" xyz="0 0 0"/>
  </link>
  <link name="smart_box">
    <visual>
      <geometry>
        <box size="${box_length} ${box_width} ${box_height}"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </visual>
  </link>
  <joint name="joint1" type="fixed">
    <parent link="base_footprint"/>
    <child link="smart_box"/>
    <origin xyz="0 0 ${box_height}"/>
  </joint>
</robot>
