<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="smarty">

<xacro:property name="box_length" value="3"/>
<xacro:property name="box_width" value="0.2"/>
<xacro:property name="box_height" value="0.2"/>

<xacro:property name="box_length_sqrd" value="${box_length*box_length}"/>
<xacro:property name="box_width_sqrd" value="${box_width*box_width}"/>
<xacro:property name="box_height_sqrd" value="${box_height*box_height}"/>

